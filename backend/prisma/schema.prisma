generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



enum Role {
  ADMIN
  PARTICIPANT
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  REFUSED
  CANCELED
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  fullName     String?  @map("full_name")
  phone        String?
  role         Role     @default(PARTICIPANT)
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // relations
  createdEvents Event[]        @relation("EventsCreatedBy")
  reservations  Reservation[]  @relation("ReservationsByUser")
  decisions     Reservation[]  @relation("ReservationsDecidedBy")

  @@map("users")
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String?
  startAt     DateTime    @map("start_at")
  endAt       DateTime?   @map("end_at")
  status      EventStatus @default(DRAFT)

  capacityMax Int         @map("capacity_max")
  publishedAt DateTime?   @map("published_at")
  canceledAt  DateTime?   @map("canceled_at")

  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  // relations
  createdById String   @map("created_by")
  createdBy   User     @relation("EventsCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  locationId  String   @map("location_id")
  location    Location @relation(fields: [locationId], references: [id], onDelete: Restrict)

  reservations Reservation[]

  @@index([startAt])
  @@index([status])
  @@map("events")
}

model Reservation {
  id          String            @id @default(uuid())
  status      ReservationStatus @default(PENDING)

  requestedAt DateTime          @default(now()) @map("requested_at")
  confirmedAt DateTime?         @map("confirmed_at")
  refusedAt   DateTime?         @map("refused_at")
  canceledAt  DateTime?         @map("canceled_at")

  cancelReason String?          @map("cancel_reason")
  adminNote    String?          @map("admin_note")

  ticketCode   String?          @unique @map("ticket_code")
  ticketPdfUrl String?          @map("ticket_pdf_url")

  // relations
  userId      String  @map("user_id")
  user        User    @relation("ReservationsByUser", fields: [userId], references: [id], onDelete: Cascade)

  eventId     String  @map("event_id")
  event       Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)

  decidedById String? @map("decided_by")
  decidedBy   User?   @relation("ReservationsDecidedBy", fields: [decidedById], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // anti-doublon: 1 r√©servation par (user, event)
  @@unique([userId, eventId])

  @@index([status])
  @@index([eventId])
  @@index([userId])

  @@map("reservations")
}
